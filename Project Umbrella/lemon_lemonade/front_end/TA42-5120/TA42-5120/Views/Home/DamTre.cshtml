<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Material Design for Bootstrap</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
          rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body style="margin-top: 80px !important">

    <!-- Page Header-->
    <header class="masthead" style="background-image: url('../assets/img/treatmentintro.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-10 col-xl-10">
                    <div class="page-heading">
                        <h1>Sunburn damage and treatment</h1>
                        <br />
                        <span class="subheading">Some general sunburn treatment suggestions for children and teenagers</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!--Main layout-->
    <main class="my-5">
        <div class="container">
            <!--Section: Content-->
            <section class="text-center">
                
                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/eyes.jpg" class="img-fluid"  />
                                <a href="@Url.Action("Eyedamage", "Home")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Damage to eyes</h5>
                                <p class="card-text">
                                    Click here and learn more about sunburn damage to eyes
                                </p>
                                <a href="@Url.Action("Eyedamage", "Home")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/woman-667547_1280.jpg" class="img-fluid" style="height: 175px; width: 500px;" />
                                <a href="@Url.Action("Skinda mage", "Home")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Sunburn damage</h5>
                                <p class="card-text">
                                    Want to know more about sunburn damage? Click here.
                                </p>
                                <a href="@Url.Action("Skindamage", "Home")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/SunburnHead.jpg" class="img-fluid" style="height: 190px; width: 500px;" />
                                <a href="@Url.Action("NewSkinDmg", "Home")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Damage to skin</h5>
                                <p class="card-text">
                                    Click here and learn more about sunburn damage to skin.
                                </p>
                                <br>
                                <a href="@Url.Action("NewSkinDmg", "Home")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-4">

                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/treatHead.jpg" class="img-fluid" width=500 height=500 />
                                <a href="@Url.Action("treatment", "Home")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Treatment</h5>
                                <p class="card-text">
                                    Want to get some general advice about how to treat sunburn? Click here.
                                </p>
                                <a href="@Url.Action("treatment", "Home")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>

                    </div>


                </div>
            </section>
            <!--Section: Content-->
        </div>
    </main>
    <!--Main layout-->
</body>
</html>



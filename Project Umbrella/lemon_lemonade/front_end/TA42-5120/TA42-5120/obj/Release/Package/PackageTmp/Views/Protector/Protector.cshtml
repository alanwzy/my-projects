<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Material Design for Bootstrap</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
          rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body style="margin-top: 80px !important">

    <!-- Page Header-->
    <header class="masthead" style="background-image: url('../assets/img/sunprotectiontitle.jpg')">
        <div class="container position-relative px-4 px-lg-5" >
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-10 col-xl-10">
                    <div class="page-heading">
                        <h1>Sun Protection Tools</h1>
                        <br />
                        <span class="subheading">Sun safety for children and teenagers</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!--Main layout-->
    <main class="my-5">
        <div class="container">
            <!--Section: Content-->
            <section class="text-center">
                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/sunscreencover.png" class="img-fluid" width=500 height=500 />
                                <a href= "@Url.Action("Suncream", "Protector")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Sunscreen</h5>
                                <p class="card-text">
                                    Want to have healthy skin? We can show you how!
                                </p>
                                <br>
                                <a href="@Url.Action("Suncream", "Protector")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/sunglassescover.png" class="img-fluid" width=500 height=500 />
                                <a href="@Url.Action("Sunglasses", "Protector")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Sunglasses</h5>
                                <p class="card-text">
                                    Choose the correct style of sunglasses before sunlight blurs your child’s vision
                                </p>
                                <br>
                                <a href="@Url.Action("Sunglasses", "Protector")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">

                                <img src="~/assets/img/hatcover.png" class="img-fluid" width=500 height=500 />
                                <a href="@Url.Action("Hat", "Protector")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Hat</h5>
                                <p class="card-text">
                                    Want to look cool and also stay cool? Let’s put the hat on!
                                </p>
                                <br>
                                <a href="@Url.Action("Hat", "Protector")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="~/assets/img/clothcover.png" class="img-fluid" width=500 height=500 />
                                <a href="@Url.Action("Cloth", "Protector")">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Clothes and Umbrella</h5>
                                <p class="card-text">
                                    No more sunburns! We have Umbrella and Sun Protective Clothes for you.
                                </p>
                                <br>
                                <a href="@Url.Action("Cloth", "Protector")" class="btn btn-primary">Learn more</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--Section: Content-->
        </div>
    </main>
    <!--Main layout-->
</body>
</html>




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico">
    <title>@ViewBag.Title - Umbrella</title>

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>

    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />

    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
          rel="stylesheet" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <style>

        .dropdown1 {
            float: right;
            overflow: hidden;
        }

        .dropbtn1 {
            border: none;
            outline: none;
            color: black !important;
            background-color: white !important;
            margin: 0;
            padding: 24px 16px;
            font-size: 0.75rem;
            font-weight: 800;
            letter-spacing: 0.0625em;
            text-transform: uppercase;
        }

            .dropbtn1:hover, .dropdown-content1 a:hover {
                color: #FADD2D !important;
            }

        .dropdown-content1 {
            display: none;
            position: absolute;
            /*
                position: relative;
                 left: 50%;
            transform: translateX(-50%);
                */
            background-color: #ffffff;
            min-width: 150px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content1 a {
                float: none;
                color: black !important;
                text-decoration: none;
                display: block;
                text-align: center;
                font-size: 16px;
            }

        .dropdown1:hover .dropdown-content1 {
            display: block;
        }
    </style>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <img src="~/assets/favicon.ico" />
            <a class="navbar-brand" href="@Url.Action("Index","Home")"> Sunlight Protection</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse is-fixed" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item">
                        <a class="nav-link px-lg-3 py-3 py-lg-4" href="@Url.Action("Index","Home")">Home</a>
                    </li>

                    <li class="nav-item">
                        <div class="dropdown1">
                            <div class="dropbtn1">
                                About UV
                                <i class="fa fa-caret-down"></i>
                            </div>
                            <div class="dropdown-content1">
                                <a class="nav-link" href="@Url.Action("Data","Data")">UV Level</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("Trend","Data")">UV Trend</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("SuburbUV","Data")">Suburb UV</a>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item">
                        <div class="dropdown1">
                            <a class="nav-link dropbtn1 px-lg-3 py-3 py-lg-4" href="@Url.Action("Protector","Protector")" id="protectbtn">
                                Protector <i class="fa fa-caret-down"></i>
                            </a>
                            <div class="dropdown-content1">
                                <a class="nav-link" href="@Url.Action("Cloth","Protector")">Clothes</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("Hat","Protector")">Hat</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("Suncream","Protector")">Suncream</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("Sunglasses","Protector")">Sunglasses</a>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item">
                        <div class="dropdown1">
                            <a class="nav-link dropbtn1 px-lg-3 py-3 py-lg-4" href="@Url.Action("DamTre","DamTre")">
                                Damage & Treatment <i class="fa fa-caret-down"></i>
                            </a>
                            <div class="dropdown-content1">
                                <a class="nav-link" href="@Url.Action("Eyedamage","DamTre")">Eye Damage</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("NewSkinDmg","DamTre")">Skin Damage</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("Skindamage","DamTre")">Sunburn</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("Treatment","DamTre")">Treatment</a>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item p-3">
                        <a class="nav-link dropbtn1" href="@Url.Action("Education","Home")">Quiz</a>
                    </li>

                    <li class="nav-item">
                        <div class="dropdown1">
                            <a class="nav-link dropbtn1 px-lg-3 py-3 py-lg-4" href="@Url.Action("Protector","Protector")">
                                Schedule <i class="fa fa-caret-down"></i>
                            </a>
                            <div class="dropdown-content1">
                                <a class="nav-link" href="@Url.Action("FutureUV","Home")">Exercise Schedule</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link" href="@Url.Action("ProSport","Home")">Sports Advice</a>
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - Umbrella - FIT5120 TA42</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>